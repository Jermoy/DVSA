{
  "name": "dvsa-test-checker-pro",
  "version": "1.2.0",
  "description": "Advanced DVSA driving test availability monitor with auto-booking.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "author": "Jermoy Cummings",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jermoy/DVSA.git"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "2captcha": "^3.0.5",
    "axios": "^1.6.7",
    "electron-log": "^5.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "keytar": "^7.9.0",
    "puppeteer-core": "^22.0.0",
    "puppeteer-in-electron": "^3.0.5"
  },
  "build": {
    "appId": "com.jermoycummings.dvsatestchecker",
    "productName": "DVSA Test Checker Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Jermoy",
        "repo": "DVSA"
      }
    ]
  }
}